{
  "rules": {
    "import/extensions": ["error", { "js": "ignorePackages" }],
    "methods-use-this": ["error", { "js": "ignorePackages" }],
  },
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["node"],
  "extends": ["airbnb-base", "prettier"]
}
